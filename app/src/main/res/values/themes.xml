<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReminisceTicketing" parent="Theme.MaterialComponents.Light.NoActionBar">

    <!-- Primary brand color. -->


        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryVariant">@color/colorBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorBlue</item>
        <item name="colorSecondaryVariant">@color/colorBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ReminisceTicketing.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ReminisceTicketing.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ReminisceTicketing.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="ActivitySplash" parent="Theme.ReminisceTicketing">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/bg_color_text_input_layout</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_50sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_50sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_50sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_50sdp</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="TextInputLayoutEditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorGrayText</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textDirection">locale</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>


    <!--ExtraBold font text view-->
    <style name="ExtraBoldTextViewMedium16" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito_extra_bold</item>
        <item name="android:textDirection">locale</item>
    </style>

    <!--SemiBold font text view-->
